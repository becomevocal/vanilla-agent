{
  "name": "chaty-assistant-monorepo",
  "private": true,
  "scripts": {
    "build": "pnpm --filter @chaty-assistant/vanilla build",
    "build:widget": "pnpm --filter @chaty-assistant/vanilla build",
    "lint": "pnpm --filter @chaty-assistant/vanilla lint",
    "typecheck": "pnpm --filter @chaty-assistant/vanilla typecheck",
    "dev:widget": "pnpm --filter embedded-app dev",
    "dev:proxy": "pnpm --filter proxy dev",
    "dev": "concurrently \"pnpm dev:proxy\" \"pnpm dev:widget\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
