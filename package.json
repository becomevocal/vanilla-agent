{
  "name": "chaty-widget",
  "private": true,
  "scripts": {
    "build": "pnpm --filter @chaty-widget/vanilla build",
    "build:widget": "pnpm --filter @chaty-widget/vanilla build",
    "lint": "pnpm --filter @chaty-widget/vanilla lint",
    "typecheck": "pnpm --filter @chaty-widget/vanilla typecheck",
    "dev:widget": "pnpm --filter embedded-app dev",
    "dev:proxy": "pnpm --filter proxy dev",
    "dev": "concurrently \"pnpm dev:proxy\" \"pnpm dev:widget\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
